{{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            <div id="box" enctype="multipart/form-data" ondrop="upload_file(event)" ondragover="return false">
                {{ form_row(form.imageFile) }}
            </div>
        </div>
        <div class="col-md-12">{{ form_row(form.name) }}</div>
        <div class="col-md-12">{{ form_row(form.description) }}</div>
        <div class="col-md-12">{{ form_row(form.city) }}</div>
        <div class="col-md-12">{{ form_row(form.address) }}</div>
        <div class="col-md-12">{{ form_row(form.zip_code) }}</div>
        <div class="col-md-12">{{ form_row(form.nbr_rooms) }}</div>
        <div class="col-md-12">{{ form_row(form.surface) }}</div>
        <div class="col-md-12">{{ form_row(form.nbr_bedrooms) }}</div>
        <div class="col-md-12">{{ form_row(form.price) }}</div>
        <div class="col-md-12">{{ form_row(form.save) }}</div>
    </div>
{{ form_end(form) }}